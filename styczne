<?php
class SkaczacaMalpa{
    private $imie;
    private $zycie;
    private $alias;
    public $opis;
    public static $licznik = 0;
    
    function __construct($imie,$zycie,$przydomek = null){
        $this->setImie($imie);
        $this->setZycie($zycie);
        $this->setPrzydomek($przydomek);
        self::zwiekszLicznik();
    }

    function __destruct() {
        self::zmniejszLicznik();
    }
    public static function getLicznik(){
        return self::$licznik;
    } 

    private static function zwiekszLicznik(){
        self::$licznik++;
    }

    private static function zmniejszLicznik(){
        self::$licznik--;
    }

    public static function opis(){
        echo "Skacząca małpa, która mocno bije po głowie";
    }

    function setImie($imiePodanePrzezUzytkownika){
        $this->imie = $imiePodanePrzezUzytkownika;
    }

    function getImie(){
        return $this->imie;
    }

    function setZycie($zycie){
        $this->zycie = $zycie;
    }

    function getZycie(){
        return $this->zycie;
    }

    function setPrzydomek($przydomek){
        $this->przydomek = $przydomek;
    }

    function getPrzydomek(){
        return $this->przydomek;
    }

    
}
SkaczacaMalpa::opis();
echo "<br/>========<br/>";
echo SkaczacaMalpa::getLicznik();
echo "<br/>========<br/>";


echo "<br/>";
$potwor1 = new SkaczacaMalpa("Potwor1",50,"Alias potwora1");
echo  $potwor1->getPrzydomek();
echo "<br/>";
$potwor2 = new SkaczacaMalpa("Potwor2",20);
echo  $potwor2->getPrzydomek();
echo "<br/>========<br/>";
echo SkaczacaMalpa::getLicznik();

unset($potwor2);

echo "<br/>========<br/>";
echo SkaczacaMalpa::getLicznik();